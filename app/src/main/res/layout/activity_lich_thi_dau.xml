<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dr_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.demo_bongda_02.LichThiDau.LichThiDauActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#d61313"
        android:weightSum="7">

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/menu_02" />


        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">


            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#ffffff"
                android:text="Tất cả"
                android:textColor="#ffffff" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:buttonTint="#ffffff"
                android:text="Theo vòng"
                android:textColor="#ffffff" />


        </RadioGroup>


        <Spinner

            android:id="@+id/spin_VongDau"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">


        </Spinner>


    </LinearLayout>

    <ListView
        android:id="@+id/lst_LichThiDau"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#d6dadc"
        android:dividerHeight="5sp">

    </ListView>

</LinearLayout>
